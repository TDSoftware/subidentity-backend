{
  "name": "subidentity-backend",
  "version": "1.0.0",
  "description": "Backend for SubIdentity Project for W3F",
  "main": "src/api.ts",
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@npmjs_tdsoftware/subidentity": "^0.0.8",
    "@types/node-cron": "^3.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "minimist": "^1.2.6",
    "mysql": "^2.18.1",
    "node-cron": "^3.0.2",
    "tv4": "^1.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/minimist": "^1.2.2",
    "@types/mysql": "^2.15.21",
    "@types/node": "^17.0.23",
    "@types/node-schedule": "^2.1.0",
    "@types/supertest": "^2.0.12",
    "@types/tv4": "^1.2.31",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "dev-api": "nodemon src/api.ts",
    "dev-indexer": "nodemon src/indexer.ts --endpoint= --from= --to=",
    "dev-exec": "nodemon src/executionManager.ts --endpoint= & nodemon src/listener.ts --endpoint=",
    "dev-listener": "nodemon src/listener.ts --endpoint=",
    "dev-scheduler": "nodemon src/scheduler.ts",
    "dev": "npm run dev-api",
    "start-api": "npm run build && node dist/src/api.js",
    "start-scheduler": "npm run build && node dist/src/scheduler.js",
    "build": "npm run lint && tsc -p .",
    "postbuild": "copyfiles --error --up 1 ./src/dbMigrations/*.sql ./dist/src",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "test": "jest --forceExit --maxWorkers=1 --silent"
  },
  "author": "TDSoftware",
  "license": "Apache-2.0"
}
